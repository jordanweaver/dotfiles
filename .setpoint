# Zscaler SSL Certificate Configuration
export CURL_CA_BUNDLE="$HOME/Devo/certs/ca-bundle.crt" # for CURL
export NODE_EXTRA_CA_CERTS="$HOME/Devo/certs/ca-bundle.crt" # for npm install or node

# Pyenv Certs
export SSL_CERT_FILE=$HOME/Devo/certs/combined-bundle.crt
export REQUESTS_CA_BUNDLE=$HOME/Devo/certs/combined-bundle.crt


alias new-containers='cd ~/Devo/repos/setpoint && docker compose down && docker system prune && docker compose up --build -d'
alias update-db='inv db-upgrade'
alias refresh-db='new-containers && inv db-snapshot && inv db-restore --skip-confirm && update-db'